<Application x:Class="FullControlsDemo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Home.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/FullControls;component/Light.xaml" />
                <ResourceDictionary Source="pack://application:,,,/FullControls;component/Dark.xaml" />
                <ResourceDictionary Source="/FullControlsDemo;component/Resources/Brushes.xaml" />
                <ResourceDictionary Source="/FullControlsDemo;component/Resources/ContextMenus.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
