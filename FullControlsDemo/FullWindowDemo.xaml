<fc:FullWindow x:Class="FullControlsDemo.FullWindowDemo"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:fc="http://devpelux.github.io/fullcontrols"
               MergeTitlebarAndContent="True"
               Title="FullWindow"
               Icon="/Icons/FullControlsSimple.ico"
               ResizeMode="CanResize"
               WindowStartupLocation="CenterScreen"
               TitlebarContextMenu="{DynamicResource WindowContextMenu}"
               MinHeight="200"
               MinWidth="300"
               Height="300"
               Width="500">
    <Grid ClipToBounds="True">
        <Rectangle Fill="#FFE0EAF0"
                   Margin="50,-200,0,0"
                   Width="150"
                   Height="400"
                   RenderTransformOrigin="0.5,0.5"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="65" />
                    <TranslateTransform />
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
    </Grid>
</fc:FullWindow>
