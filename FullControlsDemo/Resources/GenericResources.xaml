<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="WindowBackground" Color="White"/>
    <SolidColorBrush x:Key="WindowBackground2" Color="WhiteSmoke"/>
    <SolidColorBrush x:Key="DarkWindowBackground" Color="Black"/>
    <SolidColorBrush x:Key="DarkWindowBackground2" Color="#FF171717"/>
    <SolidColorBrush x:Key="WindowBorderBrush" Color="Gray"/>

    <CornerRadius x:Key="WindowCornerRadius" TopLeft="8" TopRight="8" BottomRight="8" BottomLeft="8"/>
    <Thickness x:Key="WindowBorderThickness" Left="1" Top="1" Right="1" Bottom="1"/>

</ResourceDictionary>
