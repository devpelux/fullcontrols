<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:FullControls">

    <Style TargetType="{x:Type local:SimpleAccordionItem}">
        
        <Setter Property="AnimationTime" Value="0:0:0.4"/>
        <Setter Property="ExpandingAnimationTime" Value="0:0:0.4"/>
        
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:SimpleAccordionItem}">
                    <Grid>
                        <TextBlock x:Name="PART_Header"
                                   HorizontalAlignment="Left"
                                   Margin="10,10,0,0"
                                   Foreground="Black"
                                   Text="{TemplateBinding Header}"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
